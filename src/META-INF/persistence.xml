<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="Card collection" transaction-type="JTA">
        <jta-data-source>java:/jsfcourse/cardcollection</jta-data-source>
        <class>entities.Card</class>
        <class>entities.CardProposition</class>
        <class>entities.Role</class>
        <class>entities.User</class>
        <class>entities.UserCard</class>
        <class>entities.UserRole</class>
        <class>entities.Statistics</class>
        <properties>
            <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/cardcollection"/>
            <property name="toplink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/cardcollection"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/cardcollection"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.cj.jdbc.Driver"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/cardcollection"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
